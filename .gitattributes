# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.kt text eol=lf
*.kts text eol=lf
*.java text eol=lf
*.groovy text eol=lf
*.gradle text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.adoc text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# SQL
*.sql text eol=lf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.class binary
*.png binary
*.jpg binary
